extends layout

block content
    .row
        .col-sm-6
            h3 Search
    .row
        .col-sm-12
            form(method='get', action='/customer/search/')
                .row
                    .col-sm-12
                        .form-group
                            if q
                                input(type='text', id='q', value='#{q}', name='q', class='form-control', placeholder='e.g., brooklyn coffee', required)
                            else
                                input(type='text', id='q', name='q', class='form-control', placeholder='e.g., brooklyn coffee', required)
                         .form-group
                            input(type='submit', value='search', class='btn btn-success pull-xs-right')
    | <br>                        
    if restaurants
        if q
            if restaurants.length == 0
                .row
                    .col-sm-12
                        .alert.alert-danger(role='alert')
                            | <strong> 0 results </strong> Try to make your search term broader...
            else
                .row
                    .col-sm-12
                        .alert.alert-success(role='alert')
                            | <strong> #{ restaurants.length } results </strong> Enjoy!
                include restaurants-loop
    
