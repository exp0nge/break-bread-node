extends layout

block content
    h1= title
    if user.cartSize == 0
        .alert.alert-warning(role='alert')
          | <strong> 0 items in cart </strong>
    else
        .row
            for restaurant in cart
                .col-sm-6
                    .card.card-block
                        h4(class='card-title') 
                            a(href='/customer/#{ restaurant.info._id}/view') #{ restaurant.info.name }
                        hr
                        .card-text
                            ul(class='list-group')
                                for item in restaurant.added
                                    li(class='list-group-item') 
                                        | #{ item.item.name }
                                        span(class='label label-danger label-pill pull-xs-right') 
                                            a(href='#', class='no-a') Delete
                                        span(class='label label-primary label-pill pull-xs-right') Qty: #{ item.qty }
                                        
                            hr
                            h5 Reservation Info
                                hr
                                form(method='post', action='')
                                    .form-group
                                        label(for='#{ restaurant.info._id }size') Party size
                                        input(type='number', class='form-control', min='1', value='1', id='#{ restaurant.info._id }size', name='#{ restaurant.info._id }size', required)
                                    .form-group
                                        label(for='#{ restaurant.info._id }date') Date
                                        input(type='date', class='form-control', id='#{ restaurant.info._id }date', name='#{ restaurant.info._id }date', required)
                                    .form-group
                                        label(for='#{ restaurant.info._id }size') Time
                                        input(type='time', class='form-control', id='#{ restaurant.info._id }time', name='#{ restaurant.info._id }time', required)
                                    .form-group
                                        input(type='submit', class='form-control btn btn-primary', value='Continue to payment')
                                        small(class='text-muted') Restaurants can deny reservations. Don't worry, you will be refunded.
