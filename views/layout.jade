doctype html
html
  head
    title= title
    link(rel='stylesheet', href='https://cdn.rawgit.com/twbs/bootstrap/v4-dev/dist/css/bootstrap.css')
    link(rel='stylesheet', href='/css/bread.css')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
  body
    nav(class='navbar navbar-dark bg-primary', style='background-color: #e3f2fd')
        a(class='navbar-brand') Break Bread
        ul(class='nav navbar-nav')
            li(class='nav-item')
                if home
                    a(class='nav-link', href='#{ home }') Home
                else
                    a(class='nav-link', href='/customer') Home
             if user
                li(class='nav-item pull-xs-right')
                    div(class='nav-link') Hello, #{ user.username }
                li(class='nav-item pull-xs-right')
                    a(href='/users/logout', class='nav-link') Logout
                li(class='nav-item pull-xs-right') 
                    a(href='/customer/cart', class='nav-link') 
                        | Cart
                        if user.cartSize > 0
                            span(class='label label-secondary') *
                li(class='nav-item pull-xs-right')
                    a(href='/customer/orders', class='nav-link') Orders
             else
                li(class='nav-item pull-xs-right')
                    a(class='nav-link', href='/users/login?type=customer&next=#{ nextUrl }') Login
             
             block menu
    | <br>
    .container
        block content
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/js/bootstrap.min.js')
    
    include footer
